@page
@model Server.Pages.UserPanel.Addresses.IndexModel
@{
}

<main class="page-content">
    <div class="container">
        <div class="row mb-5">

            <partial name="PartialViews/_UserPanelSideBar"></partial>
            <div class="col-xl-9 col-lg-8 col-md-7">
                <div class="ui-box bg-white mb-5">
                    <div class="ui-box-title">@DataDictionaries.Addresses</div>
                    <div class="ui-box-content">

                        <div class="user-address-items">

                            @foreach (var address in Model.AddressVm)
                            {
                                <div class="user-address-item">
                                <div class="custom-radio-box">
                                    <input type="radio" class="custom-radio-box-input" name="userAddress" id="userAddress01" checked="">
                                    <label for="userAddress01" class="custom-radio-box-label" data-placeholder="@DataDictionaries.DefaultAddressPlaceholder" data-placeholder-checked="@DataDictionaries.DefaultAddressMessage">
                                        <span class="d-block user-address-recipient mb-2">
                                            @(address.State+","+address.City)
                                        </span>
                                        <span class="d-block user-contact-items fa-num mb-3">
                                            <span class="user-contact-item">
                                                <i class="ri-mail-line icon"></i>
                                                <span class="value">@address.PostCode</span>
                                            </span>
                                            <span class="user-contact-item">
                                                <i class="ri-phone-line icon"></i>
                                                <span class="value">@address.UserPhoneNumber</span>
                                            </span>
                                            <span class="user-contact-item">
                                                <i class="ri-user-line icon"></i>
                                                <span class="value">@address.UserFullName</span>
                                            </span>
                                        </span>
                                        <span class="d-flex align-items-center justify-content-end">
                                            <a href="#" class="link border-bottom-0 fs-7 fw-bold" data-remodal-target="remove-from-addresses-modal">@ButtonCaptions.Delete</a>
                                            <span class="text-secondary mx-2">|</span>
                                            <a href="#" class="link border-bottom-0 fs-7 fw-bold" data-remodal-target="edit-address-modal">@ButtonCaptions.Edit</a>
                                        </span>
                                    </label>
                                </div>
                            </div>
                            }

                            <div class="user-address-item user-add-address-btn-container">
                                <button class="user-add-address-btn" data-remodal-target="add-address-modal-fields-with-map">
                                    <i class="ri-add-line icon"></i>
                                    <span>@ButtonCaptions.NewAddress</span>
                                </button>
                            </div>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</main>

