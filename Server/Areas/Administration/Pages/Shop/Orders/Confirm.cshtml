@model long
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title">@DataDictionaries.ConfirmOrder</h4>
</div>
<form asp-page="./Index"
      asp-page-handler="ConfirmOrder"
      data-ajax="true"
      data-action="Refresh"
      enctype="multipart/form-data"
      method="post">
    <div class="modal-body">
        @ConfirmationMessages.ConfirmOrderMessage
    </div>
    <input type="hidden" name="orderId" value="@Model" />
    <div class="modal-footer">
        <button type="submit" class="btn btn-info waves-effect waves-light">@ButtonCaptions.Confirm</button>
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">@ButtonCaptions.Cancel</button>
    </div>

</form>